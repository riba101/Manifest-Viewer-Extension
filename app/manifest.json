{
  "manifest_version": 3,
  "name": "Manifest Viewer (DASH/HLS)",
  "version": "1.0.2",
  "description": "Pretty-print DASH (.mpd) and HLS (.m3u8) manifests with syntax highlighting.",
  "permissions": ["storage", "declarativeNetRequestWithHostAccess", "webNavigation", "tabs", "downloads"],
  "host_permissions": ["<all_urls>"],
  "declarative_net_request": { "rule_resources": [] },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png",
    "256": "icons/icon-256.png"
  },

  "action": {
    "default_title": "Open Manifest Viewer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_popup": "popup.html"
  },

  "background": { "service_worker": "background.js" }
}
